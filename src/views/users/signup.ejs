<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../static/partials/head.ejs %>
</head>
<body>
  
  <% include ../static/partials/navbar.ejs %>
  
  <main class="container">

    <h2>Welcome to Blocipedia</h2>

    <% include ../static/partials/messages.ejs %>

    <div class="row">
      <div class="col-md-8 col-lg-12">
        <form method="POST" action="/user/signup">
          <div class="form-group">
            <label>Name:</label>
            <input type="text" name="name" placeholder="Enter Name" class="form-control"/>
            <small class="text-muted" id="titleHelp">Name must be 2 or more characters in length.</small>
          </div>
          <div class="form-group">
            <label>Email:</label>
            <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
            <small class="text-muted" id="titleHelp">Must be a valid email.</small>
          </div>
          <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
            <small class="text-muted" id="titleHelp">Must be a valid password.</small>
          </div>
          <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password_conf" placeholder="Enter Password confirmation" class="form-control"/>
          </div><br/>
          <input type="submit" value="Sign Up" class="btn btn-primary"/>
        </form>
      </div>
    </div>

  </main>

  <% include ../static/partials/baseScripts.ejs %>

</body>
</html>