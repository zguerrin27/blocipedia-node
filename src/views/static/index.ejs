<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ./partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
          <h1 class="display-3">Welcome to Blocipedia</h1>
          <p class="lead">An application for users to share information.</p>
          <% if(currentUser) { %>
            <a href="/wikis" class="btn btn-success btn-lg">Browse Wikis</a>
            <% } else { %>
              <a href="/users/signup" class="btn btn-primary btn-lg">Sign up</a>
              <a href="/users/signin" class="btn btn-success btn-lg">Sign in</a>
            <% } %>
        </header>

        <!-- Page Features -->
        <section class="row text-center">

          <section class="col-lg-10">
            <h4 class="card-title">Unlock Your Mind</h4>
            <p class="card-text">Just be careful what you read online.</p>
          </section>

        </section>
        <!-- /.row -->

      </main>
      <!-- /.container -->

      <% include ./partials/baseScripts.ejs %>
